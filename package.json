{
	"name": "nocache-bfcache",
	"author": "Weston Ruter",
	"license": "GPL-2.0-or-later",
	"prettier": "@wordpress/prettier-config",
	"homepage": "https://github.com/westonruter/nocache-bfcache",
	"repository": "https://github.com/westonruter/nocache-bfcache",
	"bugs": "https://github.com/westonruter/nocache-bfcache/issues",
	"devDependencies": {
		"@wordpress/scripts": "*",
		"husky": "^9",
		"lint-staged": "^16",
		"typescript": "^5"
	},
	"scripts": {
		"check-engines": "wp-scripts check-engines",
		"format": "wp-scripts format && wp-scripts lint-js --fix && composer phpcbf && composer normalize",
		"lint": "tsc && npm run lint:js && composer phpstan && composer phpcs && composer normalize --dry-run",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "git archive --format=zip --output=nocache-bfcache.zip HEAD",
		"prepare": "husky",
		"transform-readme": "php tools/transform-readme.php"
	}
}
